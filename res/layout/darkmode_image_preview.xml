<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_light_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/color_dark_mode_preview_corner"
        android:clickable="true"
        android:forceDarkAllowed="false"
        android:orientation="vertical"
        android:paddingStart="18dp"
        android:paddingTop="10dp"
        android:paddingEnd="18dp">

        <ImageView
            android:id="@+id/iv_light_image"
            android:layout_width="88dp"
            android:layout_height="167dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/lightmode_sketch" />

        <TextView  
            android:id="@+id/lightMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
	    android:textColor="?android:attr/textColorPrimary"
            android:backgroundTint="?android:attr/colorPrimary"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/chip_bg"
            android:text="Light mode"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_dark_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/color_dark_mode_preview_corner"
        android:forceDarkAllowed="false"
        android:orientation="vertical"
        android:paddingStart="18dp"
        android:paddingTop="10dp"
        android:paddingEnd="18dp">

        <ImageView
            android:id="@+id/iv_dark_image"
            android:layout_width="88dp"
            android:layout_height="167dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/darkmode_sketch" />

        <TextView  
            android:id="@+id/darkMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="?android:attr/textColorPrimary"
            android:backgroundTint="?android:attr/colorPrimary"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/chip_bg"
            android:text="Dark mode"/>
    </LinearLayout>
</LinearLayout>
